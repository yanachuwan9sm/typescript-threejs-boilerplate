{
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion" : 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [2, "single"], // 文字列はシングルクォートで記述
    "no-console": "off" // console 使用を禁止 (今回は off)

  }
}